<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/layout_padding_default"
    android:paddingLeft="@dimen/dimen_padding_right_value_item_exlist_tablet"
    android:paddingRight="@dimen/dimen_padding_right_value_item_exlist_tablet"
    android:paddingTop="@dimen/layout_padding_default">

    <TextView
        style="@style/style_header_item_expandable_title_tablet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_contract_tab_fee_item_list_deduct" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/style_header_item_expandable_title_tablet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingLeft="@dimen/dimen_padding_left_group_exlist"
            android:text="@string/txt_contract_tab_fee_item_list_manage_contract" />

        <TextView
            android:id="@+id/tvContractTabFeeManageContract"
            style="@style/style_header_item_expandable_content_tablet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/style_header_item_expandable_title_tablet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingLeft="@dimen/dimen_padding_left_group_exlist"
            android:text="@string/txt_contract_tab_fee_item_list_risk" />

        <TextView
            android:id="@+id/tvContractTabFeeRisk"
            style="@style/style_header_item_expandable_content_tablet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/style_header_item_expandable_title_tablet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_contract_tab_fee_item_list_other" />

        <TextView
            android:id="@+id/tvContractTabFeeOther"
            style="@style/style_header_item_expandable_content_tablet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/style_header_item_expandable_title_tablet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/txt_contract_tab_fee_header_list_total" />

        <TextView
            android:id="@+id/tvContractTabFeeTotal"
            style="@style/style_header_item_expandable_content_tablet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tvContactTabFeeTypeDevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_contract_type_tablet"
        android:visibility="gone" />
</LinearLayout>