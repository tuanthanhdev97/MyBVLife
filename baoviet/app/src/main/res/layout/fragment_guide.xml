<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:paddingBottom="@dimen/dimen_padding_bottom_content"
        android:paddingLeft="@dimen/dimen_padding_left_content"
        android:paddingRight="@dimen/dimen_padding_right_content"
        android:paddingTop="@dimen/dimen_padding_top_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guide PDF"
            android:paddingBottom="@dimen/dimen_padding_bottom_content" />
    </LinearLayout>

</RelativeLayout>