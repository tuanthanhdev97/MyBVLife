<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/layout_padding_default"
    android:paddingTop="@dimen/layout_padding_default"
    android:weightSum="6">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@mipmap/ic_expand_group_contract" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_padding_left_text_with_icon_expand_group">

        <TextView
            style="@style/style_header_group_expandable_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_infor_account_label_contract_account" />

        <TextView
            android:id="@+id/tvInforAccountContract"
            style="@style/style_header_group_expandable_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/style_header_group_expandable_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_infor_account_label_roleNSD" />

            <TextView
                android:id="@+id/tvInforAccountRole"
                style="@style/style_header_group_expandable_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tvInforAccountTypeDevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_contract_type_phone"
        android:visibility="gone" />
</LinearLayout>