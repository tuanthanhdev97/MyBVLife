<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_content"
    android:orientation="vertical">


    <!-- title_infor-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_margin_bottom_header_section"
        android:background="@drawable/rounded_title_form"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_margin_right_icon_header_section"
            android:src="@mipmap/ic_infor_customer" />

        <TextView
            style="@style/style_title_form"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/txt_contract_tab_payment_process_title_infor" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnContractTabPayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- label_total -->
        <TextView
            android:id="@+id/tvContractTabPaymentFromDate"
            style="@style/style_title_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_margin_bottom_title" />


        <EditText
            android:id="@+id/edtContractTabPaymentTotal"
            style="@style/style_text_edittext"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_login_height_edittext"
            android:layout_marginBottom="@dimen/dimen_margin_bottom_edittext"
            android:background="@drawable/rounded_editext"
            android:editable="false"
            android:singleLine="true" />

        <!-- label_total_extra -->
        <LinearLayout
            android:id="@+id/lnContractTabPaymentExtra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvContractTabPaymentFromDateSecond"
                style="@style/style_title_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_margin_bottom_title" />

            <EditText
                android:id="@+id/edtContractTabPaymentTotalExtra"
                style="@style/style_text_edittext"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_login_height_edittext"
                android:layout_marginBottom="@dimen/dimen_margin_bottom_edittext"
                android:background="@drawable/rounded_editext"
                android:editable="false"
                android:singleLine="true" />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/tvContractTabPayment"
        style="@style/style_empty_data_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_margin_bottom_error_text"
        android:text="@string/txt_contract_tab_account_value_error"
        android:visibility="gone" />

    <!-- title_detail -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_margin_bottom_header_section"
        android:layout_marginTop="@dimen/dimen_margin_top_header_section"
        android:background="@drawable/rounded_title_form"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_margin_right_icon_header_section"
            android:src="@mipmap/ic_infor_detail" />

        <TextView
            style="@style/style_title_form"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/txt_contract_tab_payment_process_title_detail" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lntvContractTabPaymentDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- from_date -->
        <TextView
            style="@style/style_title_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_margin_bottom_title"
            android:text="@string/txt_contract_tab_payment_process_label_from_date" />

        <EditText
            android:id="@+id/edtContractTabPaymentFromDate"
            style="@style/style_text_edittext"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_login_height_edittext"
            android:layout_marginBottom="@dimen/dimen_margin_bottom_edittext"
            android:background="@drawable/rounded_editext"
            android:drawableRight="@mipmap/ic_calendar"
            android:editable="false"
            android:focusable="false"
            android:hint="@string/txt_hint_date"
            android:paddingRight="@dimen/dimen_login_padding_left_icon"
            android:singleLine="true" />

        <TextView
            android:id="@+id/tvContractTabPaymentErrorEmptyFromDate"
            style="@style/style_error_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_margin_bottom_error_text"
            android:text="@string/txt_contract_tab_payment_process_date_empty"
            android:visibility="gone" />

        <!-- label_to_date -->
        <TextView
            style="@style/style_title_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_margin_bottom_title"
            android:text="@string/txt_contract_tab_payment_process_label_to_date" />

        <EditText
            android:id="@+id/edtContractTabPaymentToDate"
            style="@style/style_text_edittext"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_login_height_edittext"
            android:layout_marginBottom="@dimen/dimen_margin_bottom_edittext"
            android:background="@drawable/rounded_editext"
            android:drawableRight="@mipmap/ic_calendar"
            android:editable="false"
            android:focusable="false"
            android:hint="@string/txt_hint_date"
            android:paddingRight="@dimen/dimen_login_padding_left_icon"
            android:singleLine="true" />

        <TextView
            android:id="@+id/tvContractTabPaymentErrorEmptyToDate"
            style="@style/style_error_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_margin_bottom_error_text"
            android:text="@string/txt_contract_tab_payment_process_date_empty"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnContractTabPaymentSearch"
            style="@style/text_style_button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_login_height_edittext"
            android:layout_marginBottom="@dimen/dimen_margin_bottom_button"
            android:layout_marginTop="@dimen/dimen_margin_top_button"
            android:background="@drawable/rounded_10dp_btn_login"
            android:paddingLeft="@dimen/dimen_padding_left_right_button_inapp_tablet"
            android:paddingRight="@dimen/dimen_padding_left_right_button_inapp"
            android:text="@string/txt_contract_tab_payment_process_button_search"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/tvContractPaymentProcessErrorDate"
            style="@style/style_empty_data_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_margin_bottom_error_text"
            android:text="@string/txt_error_date"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvContractTabPaymentDate"
        style="@style/style_empty_data_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_margin_bottom_error_text"
        android:text="@string/txt_contract_tab_account_value_error"
        android:visibility="gone" />

    <ExpandableListView
        android:id="@+id/exListPaymentProcess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|start"
        android:layout_marginBottom="@dimen/dimen_margin_bottom_default"
        android:background="@color/white"
        android:divider="@color/group_divider_color"
        android:dividerHeight="@dimen/divider_height"
        android:groupIndicator="@null"
        android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft" />

    <include
        android:id="@+id/rlPaymentPagination"
        layout="@layout/pagination_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_margin_button_with_last_input"
        android:visibility="gone" />

</LinearLayout>
