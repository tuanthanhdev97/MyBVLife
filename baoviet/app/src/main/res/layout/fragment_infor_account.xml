<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true">

    <RelativeLayout
        android:id="@+id/rlInforAccountInfor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_padding_left_right_component_form">

            <LinearLayout
                android:id="@+id/lnInforAccountDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_margin_bottom_header_section" android:background="@drawable/rounded_title_form"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_margin_right_icon_header_section"
                        android:src="@mipmap/ic_infor_detail" />

                    <TextView
                        style="@style/style_title_form"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/txt_infor_account_title_detail" />
                </LinearLayout>
                <!-- account number -->

                <TextView
                    style="@style/style_title_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_margin_bottom_title"
                    android:text="@string/txt_infor_account_label_account_number" />

                <EditText
                    android:id="@+id/edtInforAccountNumber"
                    style="@style/style_text_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_login_height_edittext"
                    android:layout_marginBottom="@dimen/dimen_margin_bottom_edittext"
                    android:background="@drawable/rounded_editext"
                    android:editable="false"
                    android:singleLine="true" />

                <!-- fullname -->

                <TextView
                    style="@style/style_title_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_margin_bottom_title"
                    android:text="@string/txt_infor_account_label_fullname" />

                <EditText
                    android:id="@+id/edtInforAccountFullName"
                    style="@style/style_text_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_login_height_edittext"
                    android:layout_marginBottom="@dimen/dimen_margin_bottom_edittext"
                    android:background="@drawable/rounded_editext"
                    android:editable="false"
                    android:singleLine="true" />

                <!-- type account -->

                <TextView
                    style="@style/style_title_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_margin_bottom_title"
                    android:text="@string/txt_infor_account_label_type_account" />

                <EditText
                    android:id="@+id/edtInforAccountTypeAccount"
                    style="@style/style_text_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_login_height_edittext"
                    android:layout_marginBottom="@dimen/dimen_margin_bottom_edittext"
                    android:background="@drawable/rounded_editext"
                    android:editable="false"
                    android:singleLine="true" />
                <!-- phone number -->

                <TextView
                    style="@style/style_title_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_margin_bottom_title"
                    android:text="@string/txt_infor_account_label_phonenumber" />

                <EditText
                    android:id="@+id/edtInforAccountPhoneNumber"
                    style="@style/style_text_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_login_height_edittext"
                    android:layout_marginBottom="@dimen/dimen_margin_bottom_edittext"
                    android:background="@drawable/rounded_editext"
                    android:editable="false"
                    android:singleLine="true" />
                <!-- email -->

                <TextView
                    style="@style/style_title_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_margin_bottom_title"
                    android:text="@string/txt_infor_account_label_email" />

                <EditText
                    android:id="@+id/edtInforAccountEmail"
                    style="@style/style_text_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_login_height_edittext"
                    android:layout_marginBottom="@dimen/dimen_margin_bottom_edittext"
                    android:background="@drawable/rounded_editext"
                    android:editable="false"
                    android:singleLine="true" />
                <!-- address -->

                <TextView
                    style="@style/style_title_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_margin_bottom_title"
                    android:text="@string/txt_infor_account_label_address" />

                <EditText
                    android:id="@+id/edtInforAccountAddress"
                    style="@style/style_text_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_login_height_edittext"
                    android:layout_marginBottom="@dimen/dimen_margin_bottom_edittext"
                    android:background="@drawable/rounded_editext"
                    android:editable="false"
                    android:focusable="false"
                    android:singleLine="true" />
                <!-- type doc -->

                <TextView
                    style="@style/style_title_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_margin_bottom_title"
                    android:text="@string/txt_infor_account_label_type_doc" />

                <EditText
                    android:id="@+id/edtInforAccountTypeDoc"
                    style="@style/style_text_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_login_height_edittext"
                    android:layout_marginBottom="@dimen/dimen_margin_bottom_edittext"
                    android:background="@drawable/rounded_editext"
                    android:editable="false"
                    android:singleLine="true" />
                <!-- number doc -->

                <TextView
                    style="@style/style_title_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_margin_bottom_title"
                    android:text="@string/txt_infor_account_label_number_doc" />

                <EditText
                    android:id="@+id/edtInforAccountNumberDoc"
                    style="@style/style_text_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_login_height_edittext"
                    android:layout_marginBottom="@dimen/dimen_margin_bottom_edittext"
                    android:background="@drawable/rounded_editext"
                    android:editable="false"
                    android:singleLine="true" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvInforAccountNodataDetail"
                style="@style/style_empty_data_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lnInforAccountDetail"
                android:layout_marginBottom="@dimen/dimen_margin_bottom_error_text"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/lnInforAccountTitleContract"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvInforAccountNodataDetail"
                android:layout_marginBottom="@dimen/dimen_margin_bottom_header_section" android:background="@drawable/rounded_title_form"
                android:layout_marginTop="@dimen/dimen_margin_top_header_section"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_margin_right_icon_header_section"
                    android:src="@mipmap/ic_contract_relate" />

                <TextView
                    style="@style/style_title_form"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/txt_infor_account_title_contract" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnInforAccountContract"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lnInforAccountTitleContract"
                android:orientation="vertical">

                <ExpandableListView
                    android:id="@+id/exListInforAccountContract"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|start"
                    android:background="@color/white"
                    android:divider="@color/group_divider_color"
                    android:dividerHeight="@dimen/divider_height"
                    android:groupIndicator="@null"
                    android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvInforAccountNodataContract"
                style="@style/style_empty_data_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lnInforAccountContract"
                android:layout_marginBottom="@dimen/dimen_margin_bottom_error_text"
                android:visibility="gone" />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>