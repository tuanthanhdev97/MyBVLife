<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.com.baoviet.MainActivity">

    <!-- Content -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10">

            <FrameLayout
                android:id="@+id/frameContent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="9.2"
                android:background="@color/background_content"
                android:paddingBottom="@dimen/dimen_padding_bottom_content_fragment"
                android:paddingLeft="@dimen/dimen_padding_left_content_fragment"
                android:paddingRight="@dimen/dimen_padding_right_content_fragment"
                android:paddingTop="@dimen/dimen_padding_top_content_fragment"></FrameLayout>

            <!-- Footer -->

            <LinearLayout
                android:id="@+id/lnFooter"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:background="@color/background_footer"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dimen_padding_bottom_footer"
                android:paddingTop="@dimen/dimen_padding_top_footer"></LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>